doctype html 
html(lang="en") 
    head 
        meta(charset="UTF-8") 
        meta(http-equiv="X-UA-Compatible" content="IE=edge") 
        meta(name="viewport" content="width=device-width, initial-scale=1.0") 
        title Document 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css") 
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700&display=swap")
        link(rel="stylesheet", href="https://unpkg.com/swiper@7/swiper-bundle.min.css")
        link(rel="stylesheet" href="styles/index.css") 
    body 
        include components/header.pug 
        +header2 
        main.main.katalog
            .katalog__body.container 
                .category 
                    a(href="katalog.html#!") Каталог  
                    | /  
                    a(href="#!") Женская одежда
                h2.katalog__title Женская одежда
                .katalog__main 
                    aside.katalog__sidebar 
                        button(type='button' onclick="addActive(this)").katalog__sidebar-btn Все категории
                            img(src="images/down-white.svg", alt="")
                        .katalog__sidebar-content
                            .katalog__sidebar-per Распродажа
                                img(src="images/per.svg", alt="")
                            button(type="button").katalog__sidebar-p.bold Новинки
                            button(type="button").katalog__sidebar-p Вязаные трикотажные вещи
                            button(type="button").katalog__sidebar-p Джемпры
                            button(type="button").katalog__sidebar-p Водолазки
                            button(type="button").katalog__sidebar-p Блузки
                            button(type="button").katalog__sidebar-p Платья
                            button(type="button").katalog__sidebar-p Футболки
                            button(type="button").katalog__sidebar-p Брюки
                            button(type="button").katalog__sidebar-p Легинсы и лосины
                            button(type="button").katalog__sidebar-p Шорты
                            button(type="button").katalog__sidebar-p Юбки
                            button(type="button").katalog__sidebar-p Майки
                            button(type="button").katalog__sidebar-p Сорочки
                            button(type="button").katalog__sidebar-p Туники
                            button(type="button").katalog__sidebar-p Халаты
                            button(type="button").katalog__sidebar-p Пижамы
                            button(type="button").katalog__sidebar-p Трусы
                    .katalog__content 
                        .katalog__filter-1 
                            .katalog__filter-1__item.dropdown
                                button(type="button" data-bs-toggle="dropdown" aria-expanded="false").katalog__filter-1__btn.dropdown-toggle#dropdownMenuButton1 
                                    p
                                        span Цвет:
                                        | Все
                                ul(aria-labelledby="dropdownMenuButton1").dropdown-menu
                                    li 
                                        a(href="#!").dropdown-item Какой то цвет
                                        a(href="#!").dropdown-item Все  
                            .katalog__filter-1__item.dropdown
                                button(type="button" data-bs-toggle="dropdown" aria-expanded="false").katalog__filter-1__btn.dropdown-toggle#dropdownMenuButton2
                                    p
                                        span Размер:
                                        | Все
                                ul(aria-labelledby="dropdownMenuButton2").dropdown-menu
                                    li 
                                        a(href="#!").dropdown-item Какой то размер
                                        a(href="#!").dropdown-item Все  
                            button(type="button").katalog__filter-1__res
                                img(src="images/res.svg", alt="")
                                | Сбросить 
                        .katalog__filter-2 
                            span Сортировать по:
                            button(type='button').katalog__filter-2__btn Цене
                                img(src="images/top.svg", alt="")
                            button(type='button').katalog__filter-2__btn Скидке
                                img(src="images/top.svg", alt="")
                        .products 
                            .products__item 
                                .products__item-top
                                    .products__item-slider.swiper
                                        .products__item-slider-wrapper.swiper-wrapper
                                            .swiper-slide
                                                img(src="images/product-1.png", alt="")
                                            .swiper-slide
                                                img(src="images/product-2.png", alt="")
                                            .swiper-slide
                                                img(src="images/product-3.png", alt="")
                                        .products__item-slider-button-left.swiper-button-prev
                                        .products__item-slider-button-right.swiper-button-next
                            .products__item 
                                .products__item-top
                                    .products__item-slider.swiper
                                        .products__item-slider-wrapper.swiper-wrapper
                                            .swiper-slide
                                                img(src="images/product-2.png", alt="")
                                            .swiper-slide
                                                img(src="images/product-1.png", alt="")
                                            .swiper-slide
                                                img(src="images/product-3.png", alt="")
                                        .products__item-slider-button-left.swiper-button-prev
                                        .products__item-slider-button-right.swiper-button-next
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js") 
        script(src="https://unpkg.com/swiper@7/swiper-bundle.min.js") 
        script(src="scripts/index.js") 